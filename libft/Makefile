.PHONY: all clean fclean re bonus
NAME			= libft.a

#################################################################################
################					MAKEFILE TREE				#################
#################################################################################

CC				= cc
CFLAGS			= -Wall -Wextra -Werror -g3
INC				= libft.h

SRCS			=	ft_atoi.c ft_bzero.c ft_calloc.c ft_isalnum.c \
					ft_isalpha.c ft_isascii.c ft_isdigit.c ft_isprint.c \
					ft_itoa.c ft_memchr.c ft_memcmp.c ft_memcpy.c \
					ft_memmove.c ft_memset.c ft_putchar_fd.c ft_putendl_fd.c \
					ft_putnbr_fd.c ft_putstr_fd.c ft_split.c ft_strchr.c \
					ft_strdup.c ft_striteri.c ft_strjoin.c ft_strlcat.c \
					ft_strlcpy.c ft_strlen.c ft_strmapi.c ft_strncmp.c \
					ft_strnstr.c ft_strrchr.c ft_strtrim.c ft_substr.c \
					ft_tolower.c ft_toupper.c

OBJS			= $(SRCS:.c=.o)

BONUS			=	ft_lstnew_bonus.c ft_lstadd_front_bonus.c ft_lstsize_bonus.c ft_lstlast_bonus.c \
					ft_lstadd_back_bonus.c ft_lstdelone_bonus.c ft_lstclear_bonus.c ft_lstiter_bonus.c \
					ft_lstmap_bonus.c

BONUS_OBJS		= $(BONUS:.c=.o) $(OBJS)

# √âtape 1 : Compilation compl√®te
all:			$(NAME)

# √âtape 1.5 : Compilation avec bonus
bonus:			$(BONUS_OBJS)
				@echo "\nüìö Creating $(NAME)..."
				@ar rcs $(NAME) $(BONUS_OBJS)
				@echo "‚úÖ $(NAME) compiled successfully.\n"

# √âtape 2 & 3 : Compilation + Assemblage (G√©n√©ration des .o)
%.o :			%.c $(INC)
				@echo "üõ†Ô∏è Compiling $<"
				@$(CC) $(CFLAGS) -o $@ -c $<

# √âtape 4 : Archivage (Cr√©ation de la biblioth√®que)
$(NAME):		$(OBJS)
				@echo "\nüìö Creating $(NAME)..."
				@ar rcs $(NAME) $(OBJS)
				@echo "‚úÖ $(NAME) created successfully.\n"

# √âtape 5 : Nettoyage des fichiers objets
clean:
				@echo "\nüßπ Cleaning $(NAME) object files..."
				@rm -f $(OBJS)
				@echo "‚úÖ Object files removed.\n"

# √âtape 6 : Nettoyage complet (libft.a)
fclean:			clean
				@echo "üßπ Cleaning $(NAME)..."
				@rm -f $(NAME)
				@echo "‚úÖ Full $(NAME) cleanup done.\n"

# √âtape 7 : Recompilation compl√®te
re:				fclean $(NAME)
